<div class = "top-image-space"></div>

<div class = "container">
  <div class = "index-contents">

    <div class = "row">
      <div class = "articles">
        <h2>新着記事</h2>
        <% @new_articles.each do |article| %>
          <div class = "article col-md-4 col-sm-6 col-xs-6">
            <%= link_to(article_path(article.id)) do %>
              <div class = "catch_image">
                <%= image_tag("#{article.catch_image}", size: "390×260") %>
              </div>

              <p class = "article-title text-center">
                <%= article.title %>
              </p>
            <% end %>

            <%= image_tag("#{article.user.icon_image}", size: "40x40") %>
            <%= link_to article.user.name, user_path(article.user.id) %>

            <p><%= article.created_at.to_date %></p>

            <p><%= render_with_hashtags(article.hashtag) %></p>

            <div class = "text-center">
              <%== article.content.truncate(30) %>
            </div>


            <p><%= article.impressionist_count %>PV</p>
            <p><%= article.favorites.count %>いいね</p>
            <p><%= link_to '詳細を確認する', article_path(article.id) %></p>

            <div id="favorite_btn_<%= article.id %>">
              <%= render partial: "favorites/favorite", locals: {article: article} %>
            </div>

          </div>
        <% end %>
      </div>
    </div>


    <div class = "row">
      <div class = "favorite-articles">

        <h2>人気記事</h2>
        <% @favorite_articles.each do |article| %>
          <div class = "article col-md-4 col-sm-6 col-xs-6">
            <%= link_to(article_path(article.id)) do %>
              <div class = "catch_image">
                <%= image_tag("#{article.catch_image}", size: "390×260") %>
              </div>

              <p class = "article-title text-center">
                <%= article.title %>
              </p>
            <% end %>

            <%= image_tag("#{article.user.icon_image}", size: "40x40") %>
            <%= link_to article.user.name, user_path(article.user.id) %>
            <p><%= article.created_at.to_date %></p>

            <p><%= render_with_hashtags(article.hashtag) %></p>
            <p><%== article.content.truncate(10) %></p>
            <p><%= article.impressionist_count %>PV</p>
            <p><%= article.favorites.count %>いいね</p>
            <p><%= link_to '詳細を確認する', article_path(article.id) %></p>

            <div id = "favorite_btn_<%= article.id %>" >
              <%= render partial: "favorites/favorite", locals: {article: article} %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
