<% if user_signed_in? %>
  <% if current_user_favorite = article.favorites.find_by(user: current_user) %>
    <li>
      <%= link_to favorite_path(id: current_user_favorite), method: :delete, remote: true do %>
        <%= image_tag "color-heart.png", class: "favorite-heart unfavorite-btn" %>
      <% end %>
    </li>
  <% else %>
    <li>
      <%= link_to favorites_path(article_id: article), method: :post, remote: true do %>
        <%= image_tag "non-color-heart.png", class: "favorite-heart favorite-btn" %>
      <% end %>
    </li>
  <% end %>
<% end %>
<li class = "like-count">
  いいね！<%= link_to article.favorites.count, favorite_users_article_path(article) %>件
</li>

<li class = "pv-count">
  <%= article.impressionist_count %>PV
</li>
