<% if user_signed_in? %>
  <% @favorite = current_user.favorites.find_by(article_id: article.id) %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, remote: true, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(article_id: article.id), method: :post, remote: true, class: 'btn btn-primary' %>
  <% end %>
<% end %>
