<h1><%= "#{@user.name}のお気に入り一覧" %></h1>
<table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @favorites.each do |favorite| %>
  <tr>
    <td><%= favorite.article.user.name %></td>
    <td><%= favorite.article.title %></td>
    <td><%= favorite.article.content %></td>
    <td><%= link_to '詳細を確認する', article_path(favorite.article.id) %></td>
    <td>
      <% if favorite.user == current_user %>
        <% if favorite.present? %>
          <%= link_to 'お気に入り解除する', favorite_path(id: favorite.id), method: :delete, class: 'btn btn-danger' %>
        <% else %>
          <%= link_to 'お気に入りする', favorites_path(article_id: favorite.article.id), method: :post, class: 'btn btn-primary' %>
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>
