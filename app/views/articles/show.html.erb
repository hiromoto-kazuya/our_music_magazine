<h1>記事詳細画面</h1>
<p>タイトル: <%= @article.title %></p>
<p>内容: <%= @article.content %></p>

<% if user_signed_in? %>
  <div id="comments_area">
    <p>コメント一覧：</p>
      <%= render partial: 'comments/index', locals: { comments: @comments,  article: @article } %>
    </div>
    <%= render partial: 'comments/form', locals: { comment: @comment, article: @article } %>

    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(article_id: @article.id), method: :post, class: 'btn btn-primary' %>
    <% end %>

    <% if @article.user == current_user %>
      <p><%= link_to "記事を編集する", edit_article_path(@article.id) %></p>
      <p><%= link_to "記事を削除する", article_path(@article.id), method: :delete,data: { confirm: '本当に削除していいですか？' }  %></p>
    <% end %>
<% end %>

<p><%= link_to "Top page", articles_path %></p>
