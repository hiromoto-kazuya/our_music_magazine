<div class = "top-image-space"></div>
<br/>

<div class = "container">
  <div class = "row">
    <% @new_articles.each do |article| %>
      <div class = "article col-md-4 col-sm-6 col-xs-6">
        <div class = "catch_image">
          <%= image_tag("#{article.catch_image}", size: "390×260") %>
        </div>

        <%= image_tag("#{article.user.icon_image}", size: "60x60") %>
        <%= link_to article.user.name, user_path(article.user.id) %>

        <%= article.title %>
        <%= article.created_at.to_date %>

        <%= render_with_hashtags(article.hashtag) %>

        <%== article.content.truncate(10) %>
        <%= article.impressionist_count %>PV
        <%= article.favorites.count %>いいね
        <%= link_to '詳細を確認する', article_path(article.id) %>

        <div id="favorite_btn_<%= article.id %>">
          <%= render partial: "favorites/favorite", locals: {article: article} %>
        </div>
      </div>
    <% end %>
  </div>
  ============================
  人気の記事
  ============================
  <div class = "row">
    <% @favorite_articles.each do |article| %>
      <div class = "article col-md-4 col-sm-6 col-xs-6">
        <div class = "catch_image">
          <%= image_tag("#{article.catch_image}") %>
        </div>

        <%= image_tag("#{article.user.icon_image}", size: "60x60") %>
        <%= link_to article.user.name, user_path(article.user.id) %>
        <%= article.title %>
        <%= article.created_at.to_date %>
        
        <%= render_with_hashtags(article.hashtag) %>
        <%== article.content.truncate(10) %>
        <%= article.impressionist_count %>PV
        <%= article.favorites.count %>いいね
        <%= link_to '詳細を確認する', article_path(article.id) %>

        <div id="favorite_btn_<%= article.id %>">
          <%= render partial: "favorites/favorite", locals: {article: article} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
