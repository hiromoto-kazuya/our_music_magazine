<h1>Top page</h1>
<table>
  <tr>
    <th>投稿者</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @articles.each do |article| %>
  <tr>
    <td><%= article.user.name %></td>
    <td><%= article.title %></td>
    <td><%= article.content %></td>
    <td><%= link_to '詳細を確認する', article_path(article.id) %></td>
  </tr>
<% end %>
</table>
