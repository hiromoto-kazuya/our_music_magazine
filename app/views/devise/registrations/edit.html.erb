<div class =  "row">
  <div class = "col-md-2 col-sm-2 col-xs-2"></div>

  <div class = "user-edit-form col-md-8 col-sm-8 col-xs-8">
    <h2>アカウント設定</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label :"ユーザー名(20文字以内)" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control",placeholder: "ユーザー名(20文字以内)" %>
      </div>

      <div class="field">
        <%= f.label :アイコン %>
        <%= f.file_field :icon_image, id: :user_image %>
      </div>

      <div class="field">
        <%= f.label :"プロフィールメッセージ(200文字以内)" %><br />
        <%= f.text_area :introduce_message, autocomplete: "introduce_message", class: "form-control",placeholder: "プロフィールメッセージ(200文字以内)" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :パスワード変更 %> <i>(変更したい時のみご記入ください)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control",placeholder: "6文字以上" %>
      </div>

      <div class="field">
        <%= f.label :パスワード変更（確認用） %><i>(変更したい時のみご記入ください)</i><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control",placeholder: "6文字以上" %>
      </div>

      <div class="field">
        <%= f.label :現在のパスワード %> <i></i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control",placeholder: "パスワードを入力"  %>
      </div>

      <div class="actions">
        <%= f.submit "完了する" %>
      </div>
    <% end %>
    <%= link_to "戻る", :back %>
  </div>

  <div class = "col-md-2 col-sm-2 col-xs-2"></div>
</div>
